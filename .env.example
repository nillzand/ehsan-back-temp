# .env.example

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY='django-insecure-your-secret-key-here'

# Set to 'True' for development, 'False' for production
DJANGO_DEBUG='True'

# Comma-separated list of allowed hostnames for the backend
# Example for production: ALLOWED_HOSTS=your-backend-domain.com,www.your-backend-domain.com
ALLOWED_HOSTS='localhost,127.0.0.1'

# Database URL (e.g., postgres://user:password@host:port/dbname)
# For development, you can leave this blank to use the default SQLite database.
DATABASE_URL=

# =============================================================
# NEW: CORS and CSRF Settings
# =============================================================

# Comma-separated list of frontend origins allowed to make requests to this backend.
# Do NOT include a trailing slash.
# Example for development: CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
# Example for production: CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS='http://localhost:5173,http://127.0.0.1:5173'

# Comma-separated list of frontend origins trusted for CSRF purposes (e.g., for session-based login).
# This is necessary for secure POST/PUT/DELETE requests from a different origin.
# Should generally be the same as your CORS origins.
# Example for development: CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
# Example for production: CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com
CSRF_TRUSTED_ORIGINS='http://localhost:5173,http://127.0.0.1:5173'